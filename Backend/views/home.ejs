  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const apiUrl = "/api/v1/videos/homesd";

      // Fetch videos from the API
      fetch(apiUrl)
        .then((response) => {
          if (!response.ok) {
            throw new Error("Network response was not ok");
          }
          return response.json();
        })
        .then((vids) => {
          // Process the videos
          const videoGrid = document.querySelector(".video-grid");

          vids.data.forEach((video) => {
            // Create a card
            const videoCard = document.createElement("div");
            videoCard.classList.add("video-card");

            // Create thumbnail
            const thumbnail = document.createElement("img");
            thumbnail.src = video.thumbNail;
            thumbnail.alt = video.title;
            videoCard.appendChild(thumbnail);

            // Create details container
            const details = document.createElement("div");
            details.classList.add("video-details");

            // Add title
            const title = document.createElement("h3");
            title.textContent = video.title;
            details.appendChild(title);

            // Add channel name
            const channelName = document.createElement("p");
            channelName.textContent = video.channelName;
            details.appendChild(channelName);

            // Add additional info
            const info = document.createElement("p");
            info.textContent = `${video.views} views • ${video.duration}`;
            details.appendChild(info);

            videoCard.appendChild(details);
            videoGrid.appendChild(videoCard);
          });
        })
        .catch((error) => {
          console.error("Error fetching video data:", error);
        });
    });
  </script>
